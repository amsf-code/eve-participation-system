<div class="box">
  <div class="text-center">
    <div class="warning">
      <%= flash[:input_missing] %>
    </div>

    <%= form_for :fleet, url: fleet_index_path do |f| %>
      <p>
        <%= f.label :"external fleet link" %><br>
        <%= f.text_field :eve_fleet_id, class: "input-box" %>
      </p>

      <p>
        <%= f.label :"fleet name" %><br>
        <%= f.text_field :name, class: "input-box" %>
      </p>

      <p>
        <%= f.label :"doctrin" %><br>
        <%= f.text_field :doctrin %>
      </p>

      <p>
        <%= f.label :"reason" %><br>
        <%= f.select :reason, options_for_select(['CTA', 'StratOp', 'HomeDefense', 'Mining', 'MoveOp', 'Other']) %>
      </p>

      <p>
        <%= f.label :"details" %><br>
        <%= f.text_field :details, class: "input-box" %>
      </p>

      <p>
        <%= f.label :"started at" %><br>
        <%= f.datetime_select :started_at, min: Date.today %>
      </p>

      <p>
        <%= f.label :"ended at" %><br>
        <%= f.datetime_select :ended_at, min: Date.today %>
      </p>

      <p>
        <%= f.submit :"create fleet"%>
      </p>
    <% end %>
  </div>
</div>
