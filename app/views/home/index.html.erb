<div class="header">
  <h1>EVE Online fleet participation tool</h1>
</div>

<div class="submit_fleet">
  <div class="text_center">
    <%= form_for :fleet, url: fleet_index_path do |f| %>
      <p>
        <%= f.label :"fleet name" %><br>
        <%= f.text_field :name %>
        <% if flash[:fleet_name_missing] %>
          <div class="warning">
            <%= flash[:fleet_name_missing] %>
          </div>
        <% end %>
      </p>

      <p>
        <%= f.label :"fleet commander name" %><br>
        <%= f.text_field :fc_name %>
        <% if flash[:fleet_commander_name_missing] %>
          <div class="warning">
            <%= flash[:fleet_commander_name_missing] %>
          </div>
        <% end %>
      </p>

      <p>
        <%= f.label :"backup fleet commander" %><br>
        <%= f.text_area :backup_fcs, size: "15x2" %>
      </p>

      <p>
        <%= f.label :"fleet booster" %><br>
        <%= f.text_area :fleet_booster, size: "15x5" %>
      </p>

      <p>
        <%= f.label :"doctrin" %><br>
        <%= f.text_field :doctrin %>
        <% if flash[:doctrin_missing] %>
          <div class="warning">
            <%= flash[:doctrin_missing] %>
          </div>
        <% end %>
      </p>

      <p>
        <%= f.label :"details" %><br>
        <%= f.text_field :details %>
        <% if flash[:details_missing] %>
          <div class="warning">
            <%= flash[:details_missing] %>
          </div>
        <% end %>
      </p>

      <p>
        <%= f.label :"duration" %><br>
        <%= f.text_field :duration %>
        <% if flash[:duration_missing] %>
          <div class="warning">
            <%= flash[:duration_missing] %>
          </div>
        <% end %>
      </p>

      <p>
        <%= f.submit :"create fleet"%>
      </p>
    <% end %>
  </div>
</div>
