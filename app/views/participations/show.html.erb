<div class="header">
  <h1>Participation saved!</h1>
</div>

<div class="submit_result">
  <div class="text_center">
    <div class="fleet_name">
      <%= @fleet.name %>
    </div>
    <%= char_image_tag(@eve_character_info.id) %>
    <%= ship_image_tag(@eve_character_info.shiptypeid) %>
    <%= corp_image_tag(@eve_character_info.corpid) %>
    <div class="location">
      <% if @eve_character_info.stationid.present? %>
        <%= "Docked in #{@eve_character_info.solarsystemid}" %>
      <% else %>
        <%= "Somewhere in #{@eve_character_info.solarsystemid}" %>
      <% end %>
    </div>
  </div>
</div>
